/*
	in -
	3 notas (0-100), nome, registro
	
	out -
	aprovados ordenadamente - minimo 150 pontos, 40 em cada uma
*/
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct cand{
	int matricula;
	float nota1, nota2, nota3;
	char nome[100];
	struct cand *next;
};

